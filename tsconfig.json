{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2023"],
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
